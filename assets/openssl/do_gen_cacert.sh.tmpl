#!/bin/sh

openssl req                            \
    -newkey rsa:4096                   \
    -nodes                             \
    -sha256                            \
    -x509                              \
    -days 36500                        \
    -keyout /var/ssl/ca/private/ca.key \
    -subj '/C=JP/ST=Tokyo/L=Chiyoda/O=ORGANIZATION/OU=ORGANIZATION_UNIT/CN={{MY_MACHINE_NAME}}/' \
    -out /var/ssl/ca/certs/ca.crt

